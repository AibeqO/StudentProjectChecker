        <Label Content="Предмет:" HorizontalAlignment="Left" Margin="218,108,0,0" VerticalAlignment="Top"/>
        <Label x:Name="subjectName" Content="--.--.----" HorizontalAlignment="Left" Margin="350,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Руководитель:" HorizontalAlignment="Left" Margin="218,134,0,0" VerticalAlignment="Top"/>
        <Label x:Name="teacherName" Content="--.--.----" HorizontalAlignment="Left" Margin="350,134,0,0" VerticalAlignment="Top"/>
        <Label Content="Тема:" HorizontalAlignment="Left" Margin="218,160,0,0" VerticalAlignment="Top"/>
